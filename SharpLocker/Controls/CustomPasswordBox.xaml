<UserControl x:Class="SharpLocker.CustomPasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SharpLocker"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300">
    <Grid>
        <DockPanel Canvas.Right="2" Canvas.Top="2">
            <Button Style="{StaticResource ButtonWithoutHover}" BorderThickness="3" 
                    BorderBrush="White" FontSize="15" DockPanel.Dock="Right" 
                    Content=""  Grid.Column="1" Width="50.1" >
                <Button.Background>
                    <ImageBrush></ImageBrush>
                </Button.Background>
            </Button>
            <PasswordBox 
                BorderThickness="0" 
                Name="txtPassword" 
                DockPanel.Dock="Left"  
                Grid.Column="0" />
        </DockPanel>

    </Grid>
</UserControl>
