<UserControl x:Class="SharpLocker.Controls.CustomPasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SharpLocker.Controls"
             xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    <Grid>
        <DockPanel fw:PointerTracker.Enabled="True">
            <Button BorderThickness="3" BorderBrush="White" FontSize="15" DockPanel.Dock="Right" Content="&#xE72A;"  Width="30" FontFamily="Segoe MDL2 Assets" Foreground="White"/>
            <TextBox FontSize="16" VerticalAlignment="Center" BorderThickness="0" Name="TxtPassword" DockPanel.Dock="Left" Height="30" Style="{StaticResource TextBoxRevealStyle}"/>
        </DockPanel>

    </Grid>
</UserControl>
