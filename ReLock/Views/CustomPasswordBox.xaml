<UserControl x:Class="ReLock.Controls.CustomPasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ReLock.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    <Grid>
        <DockPanel>
            <Button BorderThickness="3"  FontSize="15" DockPanel.Dock="Right" Content="&#xE72A;"  Width="30" FontFamily="Segoe MDL2 Assets" Foreground="White" BorderBrush="White"/>
            <!--<Button BorderThickness="3" Content="&#xE890;" FontFamily="Segoe MDL2 Assets" DockPanel.Dock="Right" Height="30" Width="30" Style="{StaticResource ButtonRoundRevealStyle}" Foreground="White" BorderBrush="White"/>-->
            <PasswordBox FontSize="16" VerticalAlignment="Center" BorderThickness="0" Name="TxtPassword" DockPanel.Dock="Left" Height="30" />
        </DockPanel>
    </Grid>
</UserControl>
